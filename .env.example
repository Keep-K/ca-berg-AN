# Server Configuration
PORT=3000
NODE_ENV=development

# Database
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=portfolio_monitor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Encryption Key (for API key encryption)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Exchange API Rate Limits (requests per minute)
BINANCE_RATE_LIMIT=1200
BYBIT_RATE_LIMIT=120
OKX_RATE_LIMIT=60
COINBASE_RATE_LIMIT=10000

# Binance Spot Testnet (Optional - for live trading testing)
# Get your testnet API keys from: https://testnet.binance.vision/
BINANCE_API_KEY=your_testnet_api_key_here
BINANCE_SECRET_KEY=your_testnet_secret_key_here
# Set to true to use Binance Spot Testnet, false for production
BINANCE_USE_TESTNET=true

# Optional Binance API base URL overrides (advanced)
# Use root URLs without trailing /api or /api/v3.
# Example: BINANCE_SPOT_TESTNET_BASE_URL=https://testnet.binance.vision
BINANCE_SPOT_TESTNET_BASE_URL=
BINANCE_FUTURES_TESTNET_BASE_URL=
BINANCE_SPOT_BASE_URL=
BINANCE_FUTURES_BASE_URL=
